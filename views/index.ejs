<html>
<head>
    <title>Flapper News</title>
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">

    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/angularApp.js"></script>
    <style> .glyphicon-thumbs-up { cursor:pointer } </style>
</head>


<style>
body {
  margin: 0;
  background: #000; 
}
video { 
    position: fixed;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    z-index: -100;
    transform: translateX(-50%) translateY(-50%);
  background-size: cover;
  transition: 1s opacity;
}
.stopfade { 
   opacity: .5;
}

#knowIt { 
  font-family: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
  font-weight:100; 
  background: rgba(0,0,0,0.4);
  color: white;
  padding: 2rem;
  width: 33%;
  margin:2rem;
  float: right;
  font-size: 1.2rem;
}
h1 {
  font-size: 3rem;
  text-transform: uppercase;
  margin-top: 0;
  letter-spacing: .3rem;
}
#knowIt button { 
  display: block;
  width: 80%;
  padding: .4rem;
  border: none; 
  margin: 1rem auto; 
  font-size: 1.3rem;
  background: rgba(255,255,255,0.23);
  color: #fff;
  border-radius: 3px; 
  cursor: pointer;
  transition: .3s background;
}
#knowIt button:hover { 
   background: rgba(0,0,0,0.5);
}

a {
  display: inline-block;
  color: #fff;
  text-decoration: none;
  background:rgba(0,0,0,0.5);
  padding: .5rem;
  transition: .6s background; 
}
a:hover{
  background:rgba(0,0,0,0.9);
}
@media screen and (max-width: 500px) { 
  div{width:70%;} 
}
@media screen and (max-device-width: 800px) {
  html { background: url(//demosthenes.info/assets/images/polina.jpg) #000 no-repeat center center fixed; }
  #bgvid { display: none; }
}
</style>


<body ng-app="flapperNews">


  <video id="bgvid" playsinline autoplay muted loop>

    <source src=" https://pixabay.com/static/uploads/video/2016/10/19/6034.mp4" type="video/mp4">
  </video>


<div id="knowIt">
<h1>Know It</h1>
<h4>A reddit-like app with a MEAN stack</h4>
<h6>feel free to add your own post, or click "comments" next to a post to see a subthread</h6>
<button>Pause</button>
</div>



<script>
// controllers for background video
var vid = document.getElementById("bgvid");
var pauseButton = document.querySelector("#knowIt button");

function vidFade() {
  vid.classList.add("stopfade");
}

vid.addEventListener('ended', function()
{
vid.pause();
// to capture IE10
vidFade();
}); 


pauseButton.addEventListener("click", function() {
  vid.classList.toggle("stopfade");
  if (vid.paused) {
    vid.play();
    pauseButton.innerHTML = "Pause";
  } else {
    vid.pause();
    pauseButton.innerHTML = "Paused";
  }
})
</script>



<div id="knowIt">

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <ui-view></ui-view>
    </div>

    <script type="text/ng-template" id="/home.html">
        <div class="page-header">
            <h1 id="newApp">News App</h1>
        </div>
        <h4 style="font-style:italic;"">ordered by popularity</h4>
        <div ng-repeat="post in posts | orderBy:'-upvotes'">
            <span class="glyphicon glyphicon-thumbs-up"
                  ng-click="incrementPostUpvotes(post)"></span>
                {{post.upvotes}}
            <span style="font-size:25px; margin-left:10px;">
                  {{post.title}}
              </a>
              <span ng-hide="post.about">

              </span>
            </span>
            <span style="margin-left:15px;">
                <a href="#/posts/{{post._id}}">Comments</a>
            </span>
        </div>

        <form ng-submit="addPost()"
              style="margin-top:30px;">
            <h3>Add a new post</h3>

            <div class="form-group">
                <input type="text"
                       class="form-control"
                       placeholder="Title"
                       ng-model="title"></input>
            </div>
            <div class="form-group" >
                <input style="height:150px;"
                        type="text"
                       class="form-control"
                       placeholder="subject..."
                       ng-model="about"></input>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
        </form>

        </div>
    </script>
<!-- =================== ON COMMENTS PAGE =================== -->
    <script type="text/ng-template" id="/posts.html">
        <div class="page-header">
            
                  <h1>
                    {{post.title}}
                  </h1>
                  <h4>
                    {{post.about}}
                  </h4>
            
        </div>
        <div ng-repeat="comment in post.comments | orderBy:'-upvotes'">
            <span class="glyphicon glyphicon-share-alt"
              ng-click="incrementCommentUpvotes(comment)"></span>
                - by {{comment.author}}
            <span style="font-size:20px; margin-left:10px;">
              {{comment.body}}
            </span>
        </div>
        <form ng-submit="addComment()"
              style="margin-top:30px;">
            <h3>Add a new comment</h3>

            <div class="form-group">
                <input type="text"
                       class="form-control"
                       placeholder="Comment"
                       ng-model="body"></input>
            </div>
            <button type="submit" class="btn btn-primary">Post</button>
            <a style="margin-top:100px;" href="#/home">back to main page</a>
        </form>
    </script>
</div>
</body>
</html>